<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<CGProfiles>
  <StartupProfile />
  <Profiles>
    <Profile>
      <Name>CG_Beep</Name>
      <Frozen>false</Frozen>
      <RequireHome>false</RequireHome>
      <API>OpenVR</API>
      <WaveOutDeviceSource>Windows</WaveOutDeviceSource>
      <WaveOutDeviceName />
      <Actions>
        <TriggeredAction>
          <Trigger>
            <TriggeringEvent>ResetPosition</TriggeringEvent>
            <FireLimitPerZero>0</FireLimitPerZero>
            <RotationCondition>
              <TargetRotationSide>Either</TargetRotationSide>
              <CompOperator>EqualOrGreaterThan</CompOperator>
              <TargetHalfTurns>0</TargetHalfTurns>
              <TargetHalfTurnsMax>99</TargetHalfTurnsMax>
              <TargetAccumulation>Either</TargetAccumulation>
              <TargetPeakHalfTurns>3</TargetPeakHalfTurns>
            </RotationCondition>
          </Trigger>
          <CGActionWaveFile>
            <Wave>\default\CG_AllClear.cga</Wave>
            <Pan>0</Pan>
            <Volume>14</Volume>
            <LoopCount>1</LoopCount>
          </CGActionWaveFile>
        </TriggeredAction>
        <TriggeredAction>
          <Trigger>
            <TriggeringEvent>Yaw0Yaw180</TriggeringEvent>
            <FireLimitPerZero>0</FireLimitPerZero>
            <RotationCondition>
              <TargetRotationSide>Left</TargetRotationSide>
              <CompOperator>EqualOrGreaterThan</CompOperator>
              <TargetHalfTurns>3</TargetHalfTurns>
              <TargetHalfTurnsMax>99</TargetHalfTurnsMax>
              <TargetAccumulation>Increasing</TargetAccumulation>
              <TargetPeakHalfTurns>0</TargetPeakHalfTurns>
            </RotationCondition>
          </Trigger>
          <CGActionWaveFile>
            <Wave>\default\CG_BeepBeep.cga</Wave>
            <Pan>-100</Pan>
            <Volume>75</Volume>
            <LoopCount>1</LoopCount>
          </CGActionWaveFile>
        </TriggeredAction>
        <TriggeredAction>
          <Trigger>
            <TriggeringEvent>Yaw0Yaw180</TriggeringEvent>
            <FireLimitPerZero>0</FireLimitPerZero>
            <RotationCondition>
              <TargetRotationSide>Right</TargetRotationSide>
              <CompOperator>EqualOrGreaterThan</CompOperator>
              <TargetHalfTurns>3</TargetHalfTurns>
              <TargetHalfTurnsMax>99</TargetHalfTurnsMax>
              <TargetAccumulation>Increasing</TargetAccumulation>
              <TargetPeakHalfTurns>0</TargetPeakHalfTurns>
            </RotationCondition>
          </Trigger>
          <CGActionWaveFile>
            <Wave>\default\CG_BeepBeep.cga</Wave>
            <Pan>100</Pan>
            <Volume>75</Volume>
            <LoopCount>1</LoopCount>
          </CGActionWaveFile>
        </TriggeredAction>
      </Actions>
    </Profile>
    <Profile>
      <Name>CG_Speech</Name>
